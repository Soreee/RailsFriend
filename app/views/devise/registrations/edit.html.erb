
<div class="card">
  <h5 class="card-header">Modifica il Profilo</h5>
  <div class="card-body">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :Email_e_Password_Attuali %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
      <% f.label :current_password %> <i></i>
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"Password Attuale" %>
    </div>
  <br>

  <div class="field form-group">
    <%= f.label :Cambia_Password %> <i><em>(Almeno <%= @minimum_password_length %> Caratteri)</em></i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"NUOVA Password (non scrivere nulla se non la vuoi cambiare)" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>

  <div class="field form-group">
    <% f.label :Nuova_Password %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"CONFERMA Nuova Password" %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Aggiorna", class:"btn btn-primary" %>
  </div>
<% end %>

  </div>
</div>



<br>
<%= link_to "Vai Indietro", :back%>
<br>

<br>
<div class="card">
  <h5 class="card-header">Non Sei Contento?</h5>
  <div class="card-body">
    <h5 class="card-title">ATTENZIONE! Cliccanto questo tasto cancellerai il tuo account permanentemente</h5>
    <div> <%= button_to "Cancella il mio Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
</div>
  </div>
</div>

